{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ABS",
            "type": "shell",
            "command": "absc --erlang model/*.abs",
            "group": {
                "kind": "build",
                "isDefault": true
              }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "gen/erl/run",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}